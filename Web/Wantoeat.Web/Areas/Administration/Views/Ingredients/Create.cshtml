@model Wantoeat.Web.ViewModels.Ingredients.IngredientCreateInputModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Ingredient</h1>
<br />
<div class="container" mt-2>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control" multiple />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="AllergenIds" class="control-label"></label>
                <select asp-for="AllergenIds" class="form-control" asp-items="@Model.Allergens" size="14"></select>
            </div>
        </div>
        <div class="container" mt-2>
            <div class="row">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>
<br />