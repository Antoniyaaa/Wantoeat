@model Wantoeat.Web.ViewModels.Comments.CommentViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Delete</h3>
<div class="container mt-5">
    <form asp-action="Delete" method="post">
        <div class="row mx-auto">
                <div class="card w-20">
                    <div class="card-body">
                        <p class="card-text">@Model.Content</p>
                        <p class="card-title">Autor: @Model.ApplicationUserUserName</p>
                    </div>
                </div>
            <div class="col-md-2">
            </div>
            <div class="col-md-5 text-center">
                <p>Are you sure you want to delete this comment?</p>
                <br />
                <input type="submit" value="Yes" class="btn btn-dark" />
                <a asp-controller="Recipes" asp-action="All" class="btn btn-dark">No</a>
            </div>
        </div>
    </form>
</div>