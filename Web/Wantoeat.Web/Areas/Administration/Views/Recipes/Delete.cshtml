@model Wantoeat.Web.ViewModels.Recipes.RecipeSimpleViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Delete</h3>
<div class="container mt-5">
    <form asp-action="Delete" method="post">
        <div class="row mx-auto">
            <div class="col-md-4">
                <img src="@Url.Content(Model.ImagePath)" class="img-thumbnail">
            </div>
            <div class="col-md-2">
            </div>
            <div class="col-md-5 text-center">
                <h3>@Model.Name</h3>
                <br />
                <p>Are you sure you want to delete this entity?</p>
                <br />
                <input type="submit" value="Yes" class="btn btn-dark" />
                <a asp-controller="Ingredients" asp-action="All" class="btn btn-dark">No</a>
            </div>
        </div>
    </form>
</div>