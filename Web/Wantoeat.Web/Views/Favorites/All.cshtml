@model List<Wantoeat.Web.ViewModels.Recipes.RecipeSimpleViewModel>

@{
    ViewData["Title"] = "All";
}

<div class="text-center mb-5">
    <h1 class="display-4">Your Favorites Toeat</h1>
</div>

<div>
    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th scope="col" class="col-2 d-flex justify-content-center">Recipe</th>
                <th scope="col" class="col-2 d-flex justify-content-center"></th>
                <th scope="col" class="col-4 d-flex justify-content-center">Your comments</th>
                <th scope="col" class="col-3 d-flex justify-content-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="row">
                    <td class="col-2 d-flex justify-content-center">
                        <a asp-area="" asp-controller="Recipes" asp-action="Details" asp-route-id="@item.Id">
                            <img src="@Url.Content(item.ImagePath)" width="70" height="70">
                        </a>
                    </td>
                    <td class="col-2 d-flex justify-content-center">
                        <a asp-area="" asp-controller="Recipes" asp-action="Details" asp-route-id="@item.Id">
                            @item.Name
                        </a>
                    </td>
                    <td class="col-4 d-flex justify-content-center">
                        @foreach (var comment in item.CommentContent)
                        {
                            @comment.Content
                        }
                    </td>
                    <td class="col-md-3 d-flex justify-content-around">
                        <div class="mr-2">
                            <a asp-controller="Comments" asp-action="Add" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="far fa-credit-card"></i>Comment</a>
                        </div>
                        <div>
                            <a asp-controller="Favorites" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"><i class="fas fa-times-circle"></i>Remove</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>    
    </table>
    @if (Model.Count() == 0)
    {
        <p>You don't have any favorites yet.</p>
    }
</div>